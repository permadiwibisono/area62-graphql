{
  "name": "area62-graphql",
  "version": "1.0.0",
  "description": "Indonesia Postal Code &amp; Area in graphql",
  "main": "./dist/bin/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/permadiwibisono/area62-graphql.git"
  },
  "keywords": [],
  "author": "Permadi Wibisono",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/permadiwibisono/area62-graphql/issues"
  },
  "homepage": "https://github.com/permadiwibisono/area62-graphql#readme",
  "scripts": {
    "prepare": "husky install",
    "start": "node ./dist/bin/server",
    "dev": "nodemon ./dist/bin/server | pino-pretty",
    "clean": "rimraf dist",
    "watch": "npm run clean && tsc -w",
    "build-ts": "tsc",
    "build": "npm run clean && npm run build-ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:seed": "node ./dist/seeds",
    "db:migrate": "node ./dist/migrate",
    "db:migrate:ts": "ts-node ./src/migrate"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.10.3",
    "@types/pino": "^6.3.11",
    "@types/pino-http": "^5.8.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.13",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-graphql": "^0.12.0",
    "gaxios": "^4.3.2",
    "graphql": "^15.6.1",
    "graphql-playground-middleware-express": "^1.7.22",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "http-errors": "^1.8.0",
    "pino": "^6.13.3",
    "pino-http": "^5.8.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  }
}
